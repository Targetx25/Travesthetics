<%- include("./partials/headers.ejs")  %>

    <section class="input-page" >
      <div id="main-hero" class="bg-image">
        <div class="px-4 py-5  text-center">
          <h1 class="display-5 text-body-emphasis hero-heading">Hey there</h1>
          <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">Let's Setup your trip</p> 
          </div>
        </div>
        <form action="/datu" method="post" id="city-form">
          <div class="mb-3 row d-flex justify-content-center">
            <input type="text" placeholder="Enter the destination city" class="form-control" name="city">
          </div>
          <input type="submit" value="Submit" class=" btn btn-lg btn-success">
        </form>

      </div>
    </section>

      <!--Carasoul-->
    <div class="container image">
      <div id="carouselExampleCaptions" class="carousel slide">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">

            <img src="./images/date.jpg" class="w-50" alt="date-night image">
            <div class="carousel-caption d-none d-md-block">
              <h5>Date Night Magic</h5>
              <p> We Guarantee a Yes! ✨🌟</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="./images/family.jpg" class="w-50" alt="family-trip">
            <div class="carousel-caption d-none d-md-block">
              <h5>Creating Memories Together</h5>
              <p>Family Adventures Await!” 🌟👨‍👩‍👧‍👦</p>
            </div>
          </div>
          <div class="carousel-item ">
            <img src="./images/friends.jpg" class=" w-50" alt="friends-trip">
            <div class="carousel-caption d-none d-md-block">
              <h5>Unforgettable Moments</h5>
              <p>Where Friends Write Their Own Story! 🌄🎉</p>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div> 
<%- include("./partials/footer.ejs")%>